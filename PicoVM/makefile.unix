CXX=g++
#CXX=clang++
CXXFLAGS=-std=c++11 -Wall -Wextra

OBJECTS= \
         main.o \
         ./CLR/AssemblyData.o \
         ./CLR/CliMetadataTableIndex.o \
         ./CLR/AssemblyReader.o

all: picovm

picovm: $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $@ $^

%.o: %.cxx
	$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	-rm -f picovm
	-rm -f *.o
	-rm -f CLR/*.o